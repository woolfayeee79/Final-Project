<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation" class="w3-panel">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w3-panel">
    <%= f.label :name %>
    <%= f.text_field :name , size: 40 , class:"w3-input w3-border" %>
  </div>

  <div class="w3-panel">
    <%= f.label :address %>
    <%= f.text_area :address , rows: 3 , cols: 40 , class:"w3-input w3-border" %>
  </div>

  <div class="w3-panel">
    <%= f.label :email %>
    <%= f.text_field :email , size: 40 , class:"w3-input w3-border" %>
  </div>

  <div class="w3-panel">
    <%= f.label :pay_type %>
    <%= f.select :pay_type, Order.pay_types.keys, prompt: 'Select a payment method',  class:"w3-input w3-border" %>
  </div>

  <div class="actions">
    <%= f.submit 'Place Order', class:"w3-button w3-light-gray" %>
  </div>
<% end %>
