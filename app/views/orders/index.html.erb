<p id="notice" class="w3-panel"><%= notice %></p>

<h1>Orders</h1>

<table class="w3-table-all">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Show', order , class:"w3-button w3-light-gray" %></td>
        <td><%= link_to 'Edit', edit_order_path(order) , class:"w3-button w3-light-gray" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-light-gray" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path , class:"w3-button w3-light-gray" %>
