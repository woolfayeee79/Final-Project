<p id="notice" class="w3-panel"><%= notice %></p>

<h1>Carts</h1>

<table class="w3-table-all">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= link_to 'Show', cart , class:"w3-button w3-light-gray" %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) , class:"w3-button w3-light-gray" %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-light-gray" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart', new_cart_path , class:"w3-button w3-light-gray" %>
